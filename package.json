{
  "name": "c7-api",
  "version": "1.0.0-beta",
  "description": "TypeScript wrapper for the Commerce7 API (V1/V2) - Works in Node.js and browsers",
  "main": "dist/client.js",
  "types": "dist/client.d.ts",
  "browser": "dist/client.js",
  "scripts": {
    "build": "rm -rf dist && tsc && npm run minify",
    "minify": "terser dist/**/*.js -o dist/client.min.js --compress --mangle --source-map",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --no-cache"
  },
  "keywords": [
    "commerce7",
    "api",
    "wrapper",
    "typescript",
    "browser",
    "node",
    "v1"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.30",
    "gh-pages": "^6.1.1",
    "jest": "^29.7.0",
    "terser": "^5.29.2",
    "ts-jest": "^29.3.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
